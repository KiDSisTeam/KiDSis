@model KiDSisMvcWebUI.Models.BooksNeed

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout-User.cshtml";
}


<ul class="list-group ">
    <li class="list-group-item bg-info" style="text-align:center">
        <h2 style="color:white">Kaydı Düzenle</h2>
    </li>
</ul>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model=>model.Name)
        @Html.HiddenFor(model=>model.BookId)
        @Html.HiddenFor(model=>model.DemandDate)
        @Html.HiddenFor(model=>model.ShoolName)
        @Html.HiddenFor(model=>model.UserId)



        <div class="form-group">
            @if (TempData["Control"] != null)
            {<div class="alert alert-danger" role="alert">
                    <i class="fa fa-exclamation-triangle" @*style="font-size: 48px;"*@></i>&nbsp;&nbsp;
                    <b>@ViewBag.KayıtHata</b>

                </div>
            }
            <label class="control-label col-md-6">
                <strong>Kitap Adı: </strong>   
                <span class="text-center" style="text-align:center"> @Model.Name</span>
           
            </label><br />

            <label class="control-label col-md-2">
                <strong>
                    Kitap Sayısı
                </strong>  
            </label>
            @*@Html.LabelFor(model => model.BookCount, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.BookCount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BookCount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-outline-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>