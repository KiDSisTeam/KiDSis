@model IEnumerable<KiDSisMvcWebUI.Models.ShoolBooksNeedsViewModel>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ul class="list-group ">
    <li class="list-group-item bg-info" style="text-align:center">
        <h2 style="color:white">Oluşturulan Talepler</h2>
    </li>
</ul>
<div class="input-group">
    <input id="filter" type="text" class="form-control" placeholder="Arama Yapın..." />
</div>
@*<input type="button" value="Print this page" onclick="window.print()">*@
<table class="table table-bordered">
    <thead>
        <tr style="color: white;" class="bg-info">
            <th>
                Sıra No
            </th>
            <th>
                Okul Adı
            </th>
            <th>
                Sınıf

            </th>
            <th>
                Kitap ismi
            </th>
            <th>
                Kitap Sayısı
            </th>
            <th>
                İşlem Tarihi
            </th>
            @*<th>İşlemler</th>*@
        </tr>
    </thead>
    <tbody class="searchable">
        @{ int rowNo = 0; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(rowNo += 1)

                </td>
                <td>
                    @item.ShoolName

                </td>
                <td>
                    @item.Class



                    @*@Html.DisplayFor(modelItem => item.BookCount)*@
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.BookCount
                </td>

                <td>
                    @item.DemandDate
                </td>



                @*<td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-info   btn-sm" })
                        @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-success   btn-sm" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger   btn-sm" })
                    </td>*@
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {

        (function ($) {

            $('#filter').keyup(function () {

                var rex = new RegExp($(this).val(), 'i');
                $('.searchable tr').hide();
                $('.searchable tr').filter(function () {
                    return rex.test($(this).text());
                }).show();

            })

        }(jQuery));

    });

</script>