@model IEnumerable<KiDSisMvcWebUI.Identity.ApplicationUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
 

    <div class="panel panel-primary">
        <ul class="list-group ">
            <li class="list-group-item bg-info mb-4" style="text-align:center;">
                <h2 style="color: white;">Kullanıcıları Listele</h2>
            </li>
        </ul>


        <div class="input-group">
            <input id="filter" type="text" class="form-control" placeholder="Arama Yapın..." />
        </div>


        <table class="table table-striped table-bordered">

            <thead>
                <tr class="bg-info" style="color:white">
                    @*<th>Id</th>*@
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    @*<th>Şifre</th>*@
                </tr>
            </thead>
            <tbody class="searchable">
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="3" class="text-center">
                            Kullanıcı yok
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            @*<td>@item.Id</td>*@
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            @*<td>@item.</td>*@

                        </tr>

                    }
                }
            </tbody>
        </table>

    </div>
</div>
<script>
    $(document).ready(function () {

        (function ($) {

            $('#filter').keyup(function () {

                var rex = new RegExp($(this).val(), 'i');
                $('.searchable tr').hide();
                $('.searchable tr').filter(function () {
                    return rex.test($(this).text());
                }).show();

            })

        }(jQuery));

    });
</script>