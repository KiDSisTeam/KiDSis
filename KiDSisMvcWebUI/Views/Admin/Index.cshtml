@model IEnumerable<KiDSisMvcWebUI.Identity.ApplicationUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
 

    <div class="panel panel-primary">
        <ul class="list-group ">
            <li class="list-group-item bg-info mb-4" style="text-align:center;">
                <h2 style="color: white;">Kullanıcıları Listele</h2>
            </li>
        </ul>
        <table class="table table-striped table-bordered">
            <tr class="bg-info" style="color:white">
                @*<th>Id</th>*@
                <th>Kullanıcı Adı</th>
                <th>Email</th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3" class="text-center">
                        Kullanıcı yok
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        @*<td>@item.Id</td>*@
                        <td>@item.UserName</td>
                        <td>@item.Email</td>


                    </tr>

                }
            }
        </table>

    </div>
</div>