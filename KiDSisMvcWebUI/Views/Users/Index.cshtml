@model IEnumerable<KiDSisMvcWebUI.Models.User>

@{
    ViewBag.Title = "Index";
}

<ul class="list-group ">
    <li class="list-group-item bg-info" style="text-align:center">

        <h2 style="color:white">Kullanıcı Sayfası</h2>

    </li>

    <p>
        @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-success   btn-sm mt-2" })
    </p>
    <table class="table table-bordered">
        <tr>
            <th>
                Kurum Kodu
                @*@Html.DisplayNameFor(model => model.InstitutionCode)*@
            </th>
            <th>
                Kurum Adı
                @*@Html.DisplayNameFor(model => model.InstitutionName)*@
            </th>
            <th>
                Şifre
                @*@Html.DisplayNameFor(model => model.Password)*@
            </th>
            <th>
                Telefon Numarası
                @*@Html.DisplayNameFor(model => model.PhoneNumber)*@
            </th>
            <th>
                e-posta Adresi
                @*@Html.DisplayNameFor(model => model.EPosta)*@
            </th>
            <th>
                Rol Adı
                @*@Html.DisplayNameFor(model => model.Role)*@
            </th>
            <th>İşlemler</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InstitutionCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InstitutionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EPosta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary   btn-sm" })
                    @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-success   btn-sm" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger   btn-sm" })
                </td>
            </tr>
        }

    </table>
