@model IEnumerable<KiDSisMvcWebUI.Models.ShoolBooksurplusViewModel>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-light">
    <ul class="list-group ">
        <li class="list-group-item bg-info" style="text-align:center">
            <h2 style="color:white">Fazla Kitaplar</h2>
        </li>
    </ul>

    @*<p>
        @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-success   btn-sm mt-2" })
    </p>*@





    <table class="table table-bordered">
        <tr style="color: white;" class="bg-info">

            <th>
                Sıra No
            </th>
            <th>
                Okul Adı
            </th>
            <th>
                Sınıf

            </th>
            <th>
                Kitap ismi
            </th>
            <th>
                Kitap Sayısı
            </th>
            <th>İşlem Tarihi </th>
            @*<th>İşlemler</th>*@
        </tr>
        @{ int rowNo = 0; }
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @(rowNo += 1)
                </td>
                <td>
                    @item.SchoolName
                </td>
                <td>
                    @item.Class



                    @*@Html.DisplayFor(modelItem => item.BookCount)*@
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.BookCount
                </td>
                <td>
                    @item.DemandDate
                </td>




                @*<td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-info   btn-sm" })
                        @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-success   btn-sm" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger   btn-sm" })
                    </td>*@
            </tr>
        }

    </table>
</div>
