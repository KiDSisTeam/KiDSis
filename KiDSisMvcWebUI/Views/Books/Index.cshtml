@model IEnumerable<KiDSisMvcWebUI.Models.Book>

@{
    ViewBag.Title = "Index";
}



<div class="bg-light">
    <ul class="list-group ">
        <li class="list-group-item bg-info" style="text-align:center">
            <h2 style="color: white;">Kitaplar</h2>
        </li>
    </ul>


    <p>
        @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-success   btn-sm mt-2" })
    </p>
    <div class="input-group">
        <input id="filter" type="text" class="form-control" placeholder="Arama Yapın..." />
    </div>


    <table class="table table-bordered">
        <thead>
            <tr style="color: white;" class="bg-info">
                <th>
                    Sıra No
                </th>
                <th>
                    Kitap Türü
                </th>
                <th>
                    Sınıf
                    @*@Html.DisplayNameFor(model => model.Class)*@
                </th>


                <th>
                    Kitap Kodu

                    @*@Html.DisplayNameFor(model => model.Code)*@
                </th>
                <th>
                    Kitap İsmi
                    @*@Html.DisplayNameFor(model => model.Name)*@
                </th>


                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody class="searchable">
            @{ int rowNo = 0; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(rowNo += 1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Class)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>


                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-info   btn-sm" })
                        @*@Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-success   btn-sm" })*@
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger   btn-sm" })
                    </td>
                </tr>
            }
            </tbody>
</table>
</div>
<script>
    $(document).ready(function () {

        (function ($) {

            $('#filter').keyup(function () {

                var rex = new RegExp($(this).val(), 'i');
                $('.searchable tr').hide();
                $('.searchable tr').filter(function () {
                    return rex.test($(this).text());
                }).show();

            })

        }(jQuery));

    });
</script>