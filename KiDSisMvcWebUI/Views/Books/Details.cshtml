@model KiDSisMvcWebUI.Models.Book

@{
	ViewBag.Title = "Details";
}

<div class="bg-light table-responsive">
	<ul class="list-group ">
		<li class="list-group-item bg-info" style="text-align:center">
			<h2 style="color:white">Detay</h2>
		</li>
	</ul>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">
					Kod
					@*@Html.DisplayNameFor(model => model.Code)*@
				</th>
				<th scope="col">
					Kitap İsmi
					@*@Html.DisplayNameFor(model => model.Name)*@
				</th>
				<th scope="col">
					Sınıf
					@*@Html.DisplayNameFor(model => model.Class)*@
				</th>
				<th scope="col">
					İşlemler
				</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>
					@Html.DisplayFor(model => model.Code)
				</td>
				<td>
					@Html.DisplayFor(model => model.Name)
				</td>
				<td>
					@Html.DisplayFor(model => model.Class)
				</td>
				<td>
					@Html.ActionLink("Düzenle", "Edit", new { id = Model.Id }, new { @class = "btn btn-info   btn-sm" })
					@Html.ActionLink("Geri Dön", "Index", new { id = Model.Id }, new { @class = "btn btn-success btn-sm" })
				</td>
			</tr>
		</tbody>
	</table>
</div>



