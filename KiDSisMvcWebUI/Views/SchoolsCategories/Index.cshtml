@model IEnumerable<KiDSisMvcWebUI.Models.SchoolsCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="list-group ">
    <li class="list-group-item bg-info" style="text-align:center">
        <h2 style="color: white;">Kategoriler</h2>
    </li>
</ul>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-success   btn-sm mt-2" })
</p>
<table class="table table-bordered">
    <tr style="color: white;" class="bg-info">
        <th>
            Sıra No
        </th>
        <th>
            Kategori Adı
            @*@Html.DisplayNameFor(model => model.Category)*@
        </th>
        <th> İşlemler</th>
    </tr>
    @{ int rowNo = 0; }
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @(rowNo += 1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-info   btn-sm" })
            @*@Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |*@
            @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
            @*@Html.ActionLink("Sil", "Delete", new { id = item.Id })*@
            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger   btn-sm" })
        </td>
    </tr>
    }

</table>
