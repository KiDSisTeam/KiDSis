@model KiDSisMvcWebUI.Models.Authority

@{
    ViewBag.Title = "Delete";
}

<div class="bg-light">
	<ul class="list-group ">
		<li class="list-group-item bg-info" style="text-align:center">
			<h2 style="color:white">Kayıt Silme</h2>
		</li>
	</ul>
	<div style="text-align:center;" class="alert alert-danger alert-dismissible mt-2">
		<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
		<i class="fas fa-exclamation-triangle"></i>
		<strong>Dikkat! </strong>Kaydı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.
	</div>
	<table class="table table-bordered">
		<thead>
			<tr class="bg-info">
				<th scope="col">
					Yetki Adı
					@*@Html.DisplayNameFor(model => model.Name)*@
				</th>
				<th scope="col">
					Yetki Türü
					@*@Html.DisplayNameFor(model => model.Type)*@
				</th>
				<th scope="col">
					İşlemler
				</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>
					@Html.DisplayFor(model => model.Name)
				</td>
				<td>
					@Html.DisplayFor(model => model.Type)
				</td>
				<td>
					@using (Html.BeginForm())
					{
						@Html.AntiForgeryToken()

						<div class="form-actions no-color">
							<input type="submit" value="Kaydı Sil" class="btn btn-danger btn-sm" />
							@Html.ActionLink("Geri Dön", "Index", new { id = Model.Id }, new { @class = "btn btn-success btn-sm" })
						</div>
					}
				</td>
			</tr>
		</tbody>
	</table>
</div>
